<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="spherogame.spheroandroidapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="5"
        android:ems="10"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/rounds"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="4"
        android:ems="10"
        android:id="@+id/players"
        android:layout_alignBaseline="@+id/rounds"
        android:layout_alignBottom="@+id/rounds"
        android:layout_alignParentEnd="true"
        tools:gravity="right"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="match_parent"
        android:text="Start"
        android:onClick="startGame"
        android:id="@+id/button4"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rounds"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players"
        android:textSize="30sp"
        android:layout_above="@+id/players"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rounds"
        android:textSize="30sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/numPlayers"
        android:layout_alignParentStart="true" />
</RelativeLayout>
